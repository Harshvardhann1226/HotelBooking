@model HotelBooking.Domain.ViewModel.VillaVM




@await Html.PartialAsync("_Loader")
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <!-- Header -->
                <div class="card-header bg-primary text-white text-center">
                    <h3>Create Villa</h3>
                </div>

                <!-- Form Body -->
                <div class="card-body border p-4">
                    <form id="villaForm" enctype="multipart/form-data">
                        <input type="hidden" id="Id" name="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input id="Name" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <input id="Description" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input id="Price" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Sqft" class="form-label"></label>
                            <input id="Sqft" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Occupency" class="form-label"></label>
                            <input id="Occupency" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label"></label>
                            <input type="file" id="ImageUrl" class="form-control" />
                        </div>

                        <button type="button" class="btn btn-success w-100" onclick="Add()">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/villa.js"></script>