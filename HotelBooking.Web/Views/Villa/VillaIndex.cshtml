@model IEnumerable<HotelBooking.Domain.Entity.Villa>

<div class="container mt-4">
    <h1 class="text-center mb-4">Villa List</h1>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Sqft</th>
                <th>Occupency</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Sqft</td>
                    <td>@item.Occupency</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a onclick="openEditModal(@item.Id);" class="btn btn-success me-3">
                                <i class="bi bi-pencil-fill"></i> Edit
                            </a>
                            <a onclick="deleteVilla(@item.Id)" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Edit Villa Modal -->
<div class="modal fade" id="editVillaModal" tabindex="-1" aria-labelledby="editVillaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="editVillaModalLabel">Edit Villa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editVillaForm">
                    <input type="hidden" id="editId" />

                    <div class="mb-3">
                        <input id="editName" class="form-control" placeholder="Name" />
                    </div>
                    <div class="mb-3">
                        <input id="editDescription" class="form-control" placeholder="Description" />
                    </div>
                    <div class="mb-3">
                        <input id="editPrice" class="form-control" placeholder="Price" />
                    </div>
                    <div class="mb-3">
                        <input id="editSqft" class="form-control" placeholder="Sqft" />
                    </div>
                    <div class="mb-3">
                        <input id="editOccupency" class="form-control" placeholder="Occupency" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success" onclick="updateVilla()">Update</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
    <script src="~/js/villa.js"></script>
}
